<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frag.mainfrag.MypageFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginStart="22dp"
        android:id="@+id/iv_mypage_profile"
        android:background="@drawable/background_grey_stroke"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_action_mypage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_marginStart="50dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/black"
        android:id="@+id/tv_mypage_folowernum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/iv_mypage_profile"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_marginStart="35dp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로워"
        app:layout_constraintStart_toEndOf="@+id/iv_mypage_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_folowernum" />

    <TextView
        android:layout_marginStart="70dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/black"
        android:id="@+id/tv_mypage_followingnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/tv_mypage_folowernum"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_marginStart="39dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로잉"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_followingnum" />

    <TextView
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_grey_stroke"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_action_pencilsmall"
        android:gravity="center"
        android:text="수정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="22dp"
        android:id="@+id/tv_mypage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="내이름"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mypage_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>