<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_grey_stroke"
    android:layout_width="320dp"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:layout_marginEnd="16dp">
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_matzip_horizontal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="식당이름"/>
        <TextView
            android:id="@+id/tv_item_matzip_horizontal_foodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="요리종류"/>
        <TextView
            android:id="@+id/tv_item_matzip_horizontal_info"
            android:layout_marginTop="5dp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="요리설명 나불나불 대충 2줄 정도 그득그득 채우기"/>
        <TextView
            android:id="@+id/tv_item_matzip_horizontal_writer"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="글쓴이"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_item_matzip_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:src="@drawable/background_grey_stroke"/>
</LinearLayout>